<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.home.HomeFragment">
    <data>
        <import type="com.studiowash.mumong.domain.login.LoginStatus"/>
        <variable
            name="showLoadingBar"
            type="boolean"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_gray">

        <ImageView
            android:id="@+id/tv_practice_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/logo_mumong"
            android:layout_marginTop="@dimen/fragment_default_top_padding"
            android:layout_marginStart="@dimen/fragment_default_horizontal_padding"/>

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="@dimen/icon_profile_width"
            android:layout_height="@dimen/icon_profile_width"
            android:src="@drawable/ic_default_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/fragment_default_top_padding"
            android:layout_marginEnd="@dimen/fragment_default_horizontal_padding"
            imageSrc="@{LoginStatus.INSTANCE.currentUser.profileImg}"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctl_practice_note_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="102dp">
            <ImageView
                android:id="@+id/iv_spring_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/img_home_note_spring_top"
                app:layout_constraintTop_toTopOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ctl_practice_note"
                app:layout_constraintTop_toBottomOf="@id/iv_spring_top"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/bg_rounded_rect_16dp_fill_white"/>
            <ImageView
                android:id="@+id/iv_spring_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/img_home_note_spring_bottom"
                app:layout_constraintTop_toTopOf="@id/ctl_practice_note"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:id="@+id/home_main_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ctl_practice_note_wrapper"
            android:layout_marginTop="3dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_rect_16dp_fill_white"
                android:orientation="vertical"
                android:padding="24dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:text="@string/home_notice_title"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_notice_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clipToPadding="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_rect_16dp_fill_white"
                android:layout_marginTop="3dp"
                android:orientation="vertical"
                android:padding="24dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:text="@string/home_event_title"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_event_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clipToPadding="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            </LinearLayout>
        </LinearLayout>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            goneUnless="@{showLoadingBar}"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>