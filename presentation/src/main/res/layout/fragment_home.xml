<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.home.HomeFragment">
    <data>
        <import type="com.studiowash.mumong.domain.login.LoginStatus"/>
        <variable
            name="showLoadingBar"
            type="boolean"/>
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_gray">
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="29dp"
            android:src="@drawable/logo_mumong"
            android:layout_marginBottom="31dp"
            android:layout_marginStart="@dimen/fragment_default_horizontal_padding"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctl_practice_note_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="73dp">
            <ImageView
                android:id="@+id/iv_spring_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/img_home_note_spring_top"
                app:layout_constraintTop_toTopOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ctl_practice_note"
                app:layout_constraintTop_toBottomOf="@id/iv_spring_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="55dp"
                android:paddingBottom="24dp"
                android:background="@drawable/bg_rounded_rect_16dp_fill_white">
                <FrameLayout
                    android:id="@+id/fl_btn_go_practice"
                    android:layout_width="312dp"
                    android:layout_height="206dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <ImageView
                        android:id="@+id/iv_bg_btn_go_practice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_bg_home_go_practice"
                        android:background="@drawable/bg_rounded_rect_16dp_fill_white"
                        android:scaleType="centerCrop"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:layout_gravity="top|start"
                        android:textColor="@color/text_invert"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="16dp"
                        android:textStyle="bold"
                        android:text="오늘의 연습\n추가하기"/>
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/fl_btn_practice_report"
                    android:layout_width="206dp"
                    android:layout_height="100dp"
                    app:layout_constraintStart_toStartOf="@id/fl_btn_go_practice"
                    app:layout_constraintTop_toBottomOf="@id/fl_btn_go_practice"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/bg_rounded_rect_16dp_fill_brand_4">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_gravity="top|start"
                        android:textColor="@color/brand_color_1"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="16dp"
                        android:textStyle="bold"
                        android:text="연습\n리포트"/>
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/fl_btn_practice_percentage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:layout_constraintStart_toEndOf="@id/fl_btn_practice_report"
                    app:layout_constraintTop_toTopOf="@id/fl_btn_practice_report"
                    app:layout_constraintBottom_toBottomOf="@id/fl_btn_practice_report"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/bg_rounded_rect_16dp_fill_brand_4">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_gravity="top|start"
                        android:textColor="@color/brand_color_1"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="16dp"
                        android:textStyle="bold"
                        android:text="연습\n리포트"/>
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/fl_btn_monthly_practice"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:layout_constraintStart_toStartOf="@id/fl_btn_go_practice"
                    app:layout_constraintTop_toBottomOf="@id/fl_btn_practice_report"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/bg_rounded_rect_16dp_fill_brand_2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_gravity="top|start"
                        android:textColor="@color/text_invert"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="16dp"
                        android:textStyle="bold"
                        android:text="월간\n연습장"/>
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/fl_btn_weekly_practice"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:layout_constraintStart_toEndOf="@id/fl_btn_monthly_practice"
                    app:layout_constraintTop_toTopOf="@id/fl_btn_monthly_practice"
                    app:layout_constraintBottom_toBottomOf="@id/fl_btn_monthly_practice"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/bg_rounded_rect_16dp_fill_brand_2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_gravity="top|start"
                        android:textColor="@color/text_invert"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="16dp"
                        android:textStyle="bold"
                        android:text="데일리\n연습"/>
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/fl_btn_piecely_practice"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:layout_constraintStart_toEndOf="@id/fl_btn_weekly_practice"
                    app:layout_constraintTop_toTopOf="@id/fl_btn_monthly_practice"
                    app:layout_constraintBottom_toBottomOf="@id/fl_btn_monthly_practice"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/bg_rounded_rect_16dp_fill_brand_2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_gravity="top|start"
                        android:textColor="@color/text_invert"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="16dp"
                        android:textStyle="bold"
                        android:text="곡별\n연습장"/>
                </FrameLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <ImageView
                    android:id="@+id/iv_spring_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_home_note_spring_bottom"
                    app:layout_constraintTop_toBottomOf="@id/iv_spring_top"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:id="@+id/home_main_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ctl_practice_note_wrapper"
            android:layout_marginTop="3dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_rect_16dp_fill_white"
                android:orientation="vertical"
                android:paddingVertical="24dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:paddingHorizontal="24dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="@string/home_notice_title"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_notice_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clipToPadding="false"
                    android:paddingHorizontal="24dp"
                    android:layout_marginTop="16dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_rect_16dp_fill_white"
                android:layout_marginTop="3dp"
                android:orientation="vertical"
                android:paddingVertical="24dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:text="@string/home_event_title"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:paddingHorizontal="24dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_event_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clipToPadding="false"
                    android:paddingHorizontal="24dp"
                    android:layout_marginTop="16dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            </LinearLayout>
        </LinearLayout>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            goneUnless="@{showLoadingBar}"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>