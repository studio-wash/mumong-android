<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="availableData"
            type="boolean" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/content_view"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_gray"
            app:defaultNavHost="true"
            app:navGraph="@navigation/nav_graph_join_activity" />
        <TextView
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/bg_selector_btn_mumong"
            android:layout_marginBottom="40dp"
            android:layout_marginHorizontal="@dimen/fragment_default_horizontal_padding"
            android:text="@string/join_mumong_next"
            android:gravity="center"
            android:textColor="@color/text_invert"
            android:textSize="16dp"
            android:enabled="@{availableData}"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>