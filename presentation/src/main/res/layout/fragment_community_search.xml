<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.community.eFragment">
    <data>
        <import type="com.studiowash.mumong.domain.login.LoginStatus" />
        <variable
            name="isLoadingSearchHistory"
            type="boolean" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/motion_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/brand_color_1">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctl_top_search_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingTop="8dp"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/iv_btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_btn_back_invert"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/brand_color_1"/>
            <com.studiowash.mumong.presentation.screen.common.search.MumongSearchView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                app:layout_constraintStart_toEndOf="@id/iv_btn_back"
                app:layout_constraintTop_toTopOf="@id/iv_btn_back"
                app:layout_constraintBottom_toBottomOf="@id/iv_btn_back"
                app:layout_constraintEnd_toEndOf="parent"
                app:hint_res="@string/community_search_board_hint"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/ctl_top_search_wrapper"
            app:layout_constraintBottom_toTopOf="@id/ctl_btn_create_new_board"
            android:background="@color/white"
            android:paddingTop="24dp"
            android:paddingHorizontal="@dimen/fragment_default_horizontal_padding">
            <TextView
                android:id="@+id/tv_recent_searched_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최근검색"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/text_black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/tv_remove_all_recent_searched"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/community_search_remove_all_recent_searched"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/text_gray"
                app:layout_constraintTop_toTopOf="@id/tv_recent_searched_title"
                app:layout_constraintBottom_toBottomOf="@id/tv_recent_searched_title"
                app:layout_constraintEnd_toEndOf="parent"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_search_history"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/tv_recent_searched_title"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="14dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            <ProgressBar
                android:id="@+id/pb_search_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                goneUnless="@{isLoadingSearchHistory}"
                app:layout_constraintTop_toTopOf="@id/rv_search_history"
                app:layout_constraintBottom_toBottomOf="@id/rv_search_history"
                app:layout_constraintStart_toStartOf="@id/rv_search_history"
                app:layout_constraintEnd_toEndOf="@id/rv_search_history"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctl_btn_create_new_board"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/brand_color_1"
            android:paddingVertical="12dp"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:id="@+id/tv_question_no_board_looking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="찾는 게시판이 없으신가요?"
                android:textSize="12sp"
                android:textColor="@color/text_invert"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_question_no_board_looking"
                app:layout_constraintStart_toStartOf="parent"
                android:text="게시판 신청하기"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_invert"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>