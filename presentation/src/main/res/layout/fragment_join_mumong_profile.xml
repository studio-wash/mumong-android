<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="errorMessage"
            type="String" />
        <variable
            name="availableData"
            type="boolean" />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_gray">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="@dimen/fragment_default_horizontal_padding">
                <TextView
                    android:textSize="18sp"
                    android:id="@+id/tv_label_et_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/text_black"
                    android:text="이름을 입력해 주세요."/>
                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_label_et_name"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/text_black"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:singleLine="true"/>
                <TextView
                    android:textSize="18sp"
                    android:id="@+id/tv_label_et_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/et_name"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/text_black"
                    android:text="ID를 입력해 주세요."/>
                <EditText
                    android:id="@+id/et_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_label_et_id"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/text_black"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:singleLine="true"/>
                <TextView
                    android:id="@+id/tv_id_error_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/et_id"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/error"
                    android:textSize="12sp"
                    android:text="@{errorMessage}"/>
                <TextView
                    android:id="@+id/tv_label_select_profile_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_id_error_message"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/text_black"
                    android:textSize="18sp"
                    android:text="프로필 사진을 선택해주세요."/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_label_select_profile_image"
                    app:layout_constraintStart_toStartOf="parent">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/bg_rounded_rect_20dp_fill_line_gray"
                        android:src="@drawable/logo_mumong_charactor_white"
                        android:padding="8dp"/>
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_rounded_rect_20dp_fill_line_gray"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
        <TextView
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_selector_btn_mumong"
            android:layout_marginBottom="40dp"
            android:layout_marginHorizontal="@dimen/fragment_default_horizontal_padding"
            android:text="@string/join_mumong_next"
            android:gravity="center"
            android:textColor="@color/text_invert"
            android:textSize="16dp"
            android:enabled="@{availableData}"/>
    </FrameLayout>
</layout>