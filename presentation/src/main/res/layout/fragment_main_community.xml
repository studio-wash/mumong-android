<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".presentation.practice.home.PracticeHomeFragment">
    <data>
        <variable
            name="communityNickname"
            type="String" />
    </data>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray_2">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ctl_top_layer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:paddingBottom="24dp"
                    android:paddingTop="12dp"
                    android:background="@drawable/bg_rounded_bottom_rect_20dp_fill_white">
                    <TextView
                        android:id="@+id/tv_community_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/fragment_default_horizontal_padding"
                        android:text="@{communityNickname, default=`commu_nick`}"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_rounded_rect_20dp_fill_dark_gray"
                        android:paddingVertical="2dp"
                        android:paddingStart="4dp"
                        android:paddingEnd="6dp"
                        android:layout_marginEnd="@dimen/fragment_default_horizontal_padding">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_community_edit_profile"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:layout_marginStart="4dp"
                            android:textColor="@color/text_invert"
                            android:text="수정"/>
                    </LinearLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/tv_community_nickname"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="20dp">
                            <ImageView
                                android:id="@+id/iv_top_menu_my_articles"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:padding="8dp"
                                android:src="@drawable/ic_community_my_articles"
                                android:background="@drawable/bg_circle_light_gray"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginStart="@dimen/fragment_default_horizontal_padding"
                                app:layout_constraintStart_toStartOf="parent"/>
                        <TextView
                            android:id="@+id/tv_top_menu_my_articles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="내가 쓴 글"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            app:layout_constraintTop_toBottomOf="@id/iv_top_menu_my_articles"
                            app:layout_constraintStart_toStartOf="@id/iv_top_menu_my_articles"
                            app:layout_constraintEnd_toEndOf="@id/iv_top_menu_my_articles"/>
                        <ImageView
                            android:id="@+id/iv_top_menu_commented_articles"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_community_commented_articles"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@id/iv_top_menu_my_articles"
                            android:background="@drawable/bg_circle_light_gray"
                            android:padding="8dp"
                            android:layout_marginStart="24dp"/>
                        <TextView
                            android:id="@+id/tv_top_menu_commented_articles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="댓글 단 글"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            app:layout_constraintTop_toBottomOf="@id/iv_top_menu_commented_articles"
                            app:layout_constraintStart_toStartOf="@id/iv_top_menu_commented_articles"
                            app:layout_constraintEnd_toEndOf="@id/iv_top_menu_commented_articles"/>
                        <ImageView
                            android:id="@+id/iv_top_menu_scrapped_articles"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_community_scrapped"
                            android:background="@drawable/bg_circle_light_gray"
                            android:padding="8dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@id/iv_top_menu_commented_articles"
                            android:layout_marginStart="24dp"/>
                        <TextView
                            android:id="@+id/tv_top_menu_scrapped_articles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="스크랩한 글"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            app:layout_constraintTop_toBottomOf="@id/iv_top_menu_scrapped_articles"
                            app:layout_constraintStart_toStartOf="@id/iv_top_menu_scrapped_articles"
                            app:layout_constraintEnd_toEndOf="@id/iv_top_menu_scrapped_articles"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ctl_favorite_boards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="24dp"
                    android:paddingBottom="8dp"
                    app:layout_constraintTop_toBottomOf="@id/ctl_top_layer"
                    android:layout_marginTop="@dimen/horizontal_separator_height_thick"
                    android:background="@drawable/bg_rounded_rect_20dp_fill_white">
                    <TextView
                        android:id="@+id/tv_favorite_boards_title"
                        android:paddingHorizontal="@dimen/fragment_default_horizontal_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/text_black"
                        android:text="즐겨찾는 게시판"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_favorite_boards"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_favorite_boards_title"
                        android:layout_marginTop="20dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <FrameLayout
                    android:id="@+id/fl_adfit_banner_1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:layout_constraintTop_toBottomOf="@id/ctl_favorite_boards"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/horizontal_separator_height_thick">
                    <View
                        android:id="@+id/view_adfit_background_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/adfit_background_color"/>
                    <com.kakao.adfit.ads.ba.BannerAdView
                        android:id="@+id/view_adfit_banner_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </FrameLayout>
                <com.studiowash.mumong.presentation.screen.common.search.MumongSearchBarView
                    android:id="@+id/sv_search_board"
                    app:editable="false"
                    android:focusable="true"
                    android:clickable="true"
                    android:descendantFocusability="blocksDescendants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/fl_adfit_banner_1"
                    app:searchIcon="@drawable/ic_search_brand"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="@dimen/fragment_default_horizontal_padding"
                    android:background="@drawable/bg_rounded_rect_20dp_fill_white"
                    android:layout_marginTop="@dimen/horizontal_separator_height_thick"
                    app:hint_res="@string/community_main_search_board_hint" />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ctl_all_boards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="24dp"
                    app:layout_constraintTop_toBottomOf="@id/sv_search_board"
                    android:layout_marginTop="@dimen/horizontal_separator_height_thick"
                    android:background="@drawable/bg_rounded_rect_20dp_fill_white">
                    <TextView
                        android:id="@+id/tv_all_boards_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginHorizontal="@dimen/fragment_default_horizontal_padding"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/text_black"
                        android:text="전체 게시판"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_all_boards"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_all_boards_title"
                        android:layout_marginTop="20dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <FrameLayout
                    android:id="@+id/fl_adfit_banner_2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:layout_constraintTop_toBottomOf="@id/ctl_all_boards"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/horizontal_separator_height_thick">
                    <View
                        android:id="@+id/view_adfit_background_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/adfit_background_color"/>
                    <com.kakao.adfit.ads.ba.BannerAdView
                        android:id="@+id/view_adfit_banner_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </FrameLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>
    </androidx.core.widget.NestedScrollView>
</layout>