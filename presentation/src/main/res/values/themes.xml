<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MuMong" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_color_1</item>
        <item name="colorPrimaryVariant">@color/brand_color_1</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brand_color_2</item>
        <item name="colorSecondaryVariant">@color/brand_color_2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!-- Customize your theme here. -->

        <item name="android:textColor">@color/text_black</item>
        <item name="windowNoTitle">true</item>

        <item name="fontFamily">@font/font_pretendard</item>
        <item name="lineHeight">20sp</item>
    </style>

    <style name="Theme.MuMong.SlideRight" parent="Theme.MuMong">
        <item name="enterAnim">@android:anim/slide_in_left</item>
        <item name="exitAnim">@android:anim/slide_out_right</item>
    </style>
</resources>