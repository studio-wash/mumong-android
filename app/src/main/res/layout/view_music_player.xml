<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="currentRecording"
            type="com.studiowash.mumong.domain.model.common.RecordingItem" />
        <variable
            name="isPlaying"
            type="boolean" />
        <variable
            name="totalTimeSec"
            type="int" />
        <variable
            name="currentTimeSec"
            type="int" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/fragment_default_horizontal_padding"
        android:paddingVertical="9dp"
        android:background="@drawable/bg_rounded_top_rect_20dp_fill_brand_gradient">
        <TextView
            android:id="@+id/current_music_time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:text="@{String.format(`%02d:%02d`, currentTimeSec/60, currentTimeSec%60)}"/>
        <TextView
            android:id="@+id/total_music_time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:text="@{String.format(`%02d:%02d`, totalTimeSec/60, totalTimeSec%60)}"/>
        <SeekBar
            android:id="@+id/seek_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/current_music_time_text_view"
            app:layout_constraintEnd_toStartOf="@id/total_music_time_text_view"
            app:layout_constraintBottom_toBottomOf="@id/current_music_time_text_view"
            android:paddingHorizontal="10dp"
            android:progress="@{Math.round(100f*(float)currentTimeSec/(float)totalTimeSec)}"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/controller_linear_layout"
            app:layout_constraintTop_toTopOf="@id/controller_linear_layout"
            app:layout_constraintBottom_toBottomOf="@id/controller_linear_layout"
            android:gravity="center|start"
            android:text="@{currentRecording.title, default=`제목`}"
            android:textSize="12sp"
            android:textColor="@color/white"/>

        <LinearLayout
            android:id="@+id/controller_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/seek_bar"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <ImageView
                android:id="@+id/previous_music_image_view"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_player_controller_previous"/>
            <ImageView
                android:id="@+id/play_pause_image_view"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_player_controller_play"/>
            <ImageView
                android:id="@+id/next_music_image_view"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_player_controller_next"
                android:layout_marginEnd="20dp"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>