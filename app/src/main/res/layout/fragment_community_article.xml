<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="item"
            type="com.studiowash.mumong.community.article.CommunityArticleItem" />
        <variable
            name="isLiked"
            type="boolean" />
        <variable
            name="isBookmarked"
            type="boolean" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_container_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/btn_back"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:paddingHorizontal="@dimen/fragment_default_horizontal_padding">

                    <!-- 글쓴이 정보 -->
                    <ImageView
                        android:id="@+id/user_profile_image_view"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/ic_default_profile"
                        imageSrc="@{item.user.profileImg}"
                        android:layout_marginTop="15dp"/>
                    <TextView
                        android:id="@+id/user_name_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/user_profile_image_view"
                        app:layout_constraintTop_toTopOf="@id/user_profile_image_view"
                        app:layout_constraintBottom_toBottomOf="@id/user_profile_image_view"
                        android:text="@{item.user.nickname, default=`작성자`}"
                        android:textStyle="bold"/>
                    <ImageView
                        android:id="@+id/user_name_profile_image_separator_dot"
                        android:layout_width="2dp"
                        android:layout_height="2dp"
                        android:src="@drawable/drawable_seperator_dot"
                        app:layout_constraintStart_toEndOf="@id/user_name_text_view"
                        app:layout_constraintTop_toTopOf="@id/user_profile_image_view"
                        app:layout_constraintBottom_toBottomOf="@id/user_profile_image_view"
                        android:layout_marginStart="3dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/user_name_profile_image_separator_dot"
                        app:layout_constraintTop_toTopOf="@id/user_profile_image_view"
                        app:layout_constraintBottom_toBottomOf="@id/user_profile_image_view"
                        android:text="@{item.writtenTime, default=`1분 전`}"
                        android:layout_marginStart="3dp"/>

                    <!-- 게시글 제목 -->
                    <TextView
                        android:id="@+id/title_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/user_profile_image_view"
                        android:text="@{item.title, default=`제목`}"
                        android:textSize="14sp"
                        android:layout_marginTop="@dimen/fragment_default_top_padding"/>
                    <!-- 첨부된 녹음파일 리스트 -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/record_list_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/title_text_view"
                        android:layout_marginTop="10dp" />

                    <!-- 본문 -->
                    <TextView
                        android:id="@+id/content_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/record_list_recycler_view"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textSize="12sp"
                        android:text="@{item.content, default=`본문`}"/>

                    <!-- 첨부된 이미지 리스트 -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/image_list_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/content_text_view"
                        android:layout_marginTop="10dp" />

                    <!-- 좌측 하단 좋아요, 북마크 -->
                    <LinearLayout
                        android:id="@+id/like_button_linear_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/image_list_recycler_view"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:gravity="center_vertical">
                        <ImageView
                            isSelected="@{isLiked}"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/btn_like"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{Integer.toString(item.likeCount), default=`0`}" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/bookmark_button_linear_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/like_button_linear_layout"
                        app:layout_constraintTop_toTopOf="@id/like_button_linear_layout"
                        app:layout_constraintBottom_toBottomOf="@id/like_button_linear_layout"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            isSelected="@{isBookmarked}"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/btn_bookmark" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{Integer.toString(item.commentCount), default=`0`}"/>
                    </LinearLayout>
                    <!-- 우측 하단 댓글 -->
                    <LinearLayout
                        android:id="@+id/comment_count_linear_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/like_button_linear_layout"
                        app:layout_constraintBottom_toBottomOf="@id/like_button_linear_layout"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_comment_unselected" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{Integer.toString(item.commentCount), default=`0`}"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <FrameLayout
                    android:id="@+id/adfit_frame_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp">
                    <View
                        android:id="@+id/adfit_background_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/adfit_background_color"/>
                    <com.kakao.adfit.ads.ba.BannerAdView
                        android:id="@+id/adfit_ad_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </FrameLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/comments_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="@dimen/fragment_default_horizontal_padding"
                    android:paddingBottom="20dp"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <com.studiowash.mumong.widget.CommentWriteView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>