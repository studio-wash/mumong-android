<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.community.eFragment">
    <data>
        <import type="com.studiowash.mumong.singleton.LoginStatus" />
    </data>
    <com.studiowash.mumong.widget.SavingMotionLayout
        android:id="@+id/motion_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/fragment_community_home_scene">

        <!-- 게시판 목록 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/favorite_boards_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/fragment_default_horizontal_padding"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/profile_icon_image_view"
            android:layout_width="@dimen/icon_profile_width"
            android:layout_height="@dimen/icon_profile_width"
            android:src="@drawable/ic_default_profile"
            imageSrc="@{LoginStatus.INSTANCE.currentUser.profileImg}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/fragment_default_top_padding"
            android:layout_marginEnd="@dimen/fragment_default_horizontal_padding"/>

        <FrameLayout
            android:id="@+id/adfit_frame_layout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/favorite_boards_recycler_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <View
                android:id="@+id/adfit_background_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/adfit_background_color"/>
            <com.kakao.adfit.ads.ba.BannerAdView
                android:id="@+id/adfit_ad_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>

        <!-- 태그 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/topic_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="9dp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/fragment_default_horizontal_padding"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/adfit_frame_layout"
            android:background="@color/white"/>

        <!-- 실시간 게시글 -->
        <View
            android:id="@+id/separator_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/horizontal_separator_height_thin"
            android:background="@color/gray_2"
            app:layout_constraintTop_toBottomOf="@id/topic_recycler_view"
            android:layout_marginTop="9dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recent_articles_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/separator_1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    </com.studiowash.mumong.widget.SavingMotionLayout>
</layout>