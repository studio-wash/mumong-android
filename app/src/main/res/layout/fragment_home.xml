<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.home.HomeFragment">
    <data>
        <import type="com.studiowash.mumong.domain.LoginStatus"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/brand_color_4">

        <ImageView
            android:id="@+id/favorite_boards_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/logo_mumong"
            android:layout_marginTop="@dimen/fragment_default_top_padding"
            android:layout_marginStart="@dimen/fragment_default_horizontal_padding"/>

        <ImageView
            android:id="@+id/profile_icon_image_view"
            android:layout_width="@dimen/icon_profile_width"
            android:layout_height="@dimen/icon_profile_width"
            android:src="@drawable/ic_default_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/fragment_default_top_padding"
            android:layout_marginEnd="@dimen/fragment_default_horizontal_padding"
            imageSrc="@{LoginStatus.INSTANCE.currentUser.profileImg}"/>

        <ImageView
            android:id="@+id/content_top_cloud_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_content_top_cloud"
            android:adjustViewBounds="true"
            android:foregroundGravity="bottom"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@id/home_main_linear_layout"/>
        <LinearLayout
            android:id="@+id/home_main_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:text="@string/home_notice_title"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/notice_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:text="@string/home_event_title"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/event_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>