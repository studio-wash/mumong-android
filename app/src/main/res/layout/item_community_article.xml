<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.studiowash.mumong.util.StringUtils"/>
        <variable
            name="item"
            type="com.studiowash.mumong.community.article.CommunityArticleItem" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_container_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/fragment_default_horizontal_padding"
        android:paddingVertical="20dp">

        <!-- 내용 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/article_content_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <!-- 게시글 제목 -->
            <TextView
                android:id="@+id/title_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/represent_image_view"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@{item.attachedRecordings == null || item.attachedRecordings.empty ? item.title : StringUtils.INSTANCE.getWithRecordingMicIcon(context, item.title), default=`제목`}"
                android:textSize="17sp"
                android:maxLines="2"/>

            <!-- 게시글 본문 -->
            <TextView
                android:id="@+id/content_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/title_text_view"
                app:layout_constraintStart_toStartOf="@id/title_text_view"
                app:layout_constraintEnd_toStartOf="@id/represent_image_view"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:text="@{item.content, default=`본문`}"
                android:ellipsize="end"
                android:inputType="none"
                android:maxLines="2"/>

            <!-- 첨부 이미지 -->
            <ImageView
                android:id="@+id/represent_image_view"
                android:layout_width="100dp"
                android:layout_height="80dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/title_text_view"
                goneUnless="@{item.attachedImages != null &amp;&amp; !item.attachedImages.empty}"
                imageSrc="@{item.attachedImages.empty ? null : item.attachedImages[0].imageSrc}"
                android:scaleType="centerCrop"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- 글쓴이 정보 -->
        <ImageView
            android:id="@+id/user_profile_image_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/article_content_constraint_layout"
            imageSrc="@{item.userIconSrc}"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/user_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/user_profile_image_view"
            app:layout_constraintTop_toTopOf="@id/user_profile_image_view"
            app:layout_constraintBottom_toBottomOf="@id/user_profile_image_view"
            android:text="@{item.userName, default=`작성자`}"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/user_name_profile_image_separator_dot"
            android:layout_width="2dp"
            android:layout_height="2dp"
            android:src="@drawable/drawable_seperator_dot"
            app:layout_constraintStart_toEndOf="@id/user_name_text_view"
            app:layout_constraintTop_toTopOf="@id/user_profile_image_view"
            app:layout_constraintBottom_toBottomOf="@id/user_profile_image_view"
            android:layout_marginStart="3dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/user_name_profile_image_separator_dot"
            app:layout_constraintTop_toTopOf="@id/user_profile_image_view"
            app:layout_constraintBottom_toBottomOf="@id/user_profile_image_view"
            android:text="@{item.writtenTime, default=`1분 전`}"
            android:layout_marginStart="3dp"/>

        <!-- 우측 하단 좋아요, 댓글 개수 -->
        <LinearLayout
            android:id="@+id/like_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/comment_linear_layout"
            app:layout_constraintTop_toTopOf="@id/user_profile_image_view"
            app:layout_constraintBottom_toBottomOf="@id/user_profile_image_view"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_like_selected"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{Integer.toString(item.likeCount), default=`0`}"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/comment_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/user_profile_image_view"
            app:layout_constraintBottom_toBottomOf="@id/user_profile_image_view"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_comment_selected"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{Integer.toString(item.commentCount), default=`0`}"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>