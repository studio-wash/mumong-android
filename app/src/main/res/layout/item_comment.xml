<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="item"
            type="com.studiowash.mumong.common.model.CommentItem" />
        <variable
            name="isLiked"
            type="boolean" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 댓글쓴이 정보 -->
        <ImageView
            android:id="@+id/user_profile_image_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            imageSrc="@{item.user.profileImg}"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/user_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/user_profile_image_view"
            app:layout_constraintTop_toTopOf="@id/user_profile_image_view"
            app:layout_constraintBottom_toBottomOf="@id/user_profile_image_view"
            android:text="@{item.user.nickname, default=`작성자`}"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/user_name_profile_image_separator_dot"
            android:layout_width="2dp"
            android:layout_height="2dp"
            android:src="@drawable/drawable_seperator_dot"
            app:layout_constraintStart_toEndOf="@id/user_name_text_view"
            app:layout_constraintTop_toTopOf="@id/user_profile_image_view"
            app:layout_constraintBottom_toBottomOf="@id/user_profile_image_view"
            android:layout_marginStart="3dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/user_name_profile_image_separator_dot"
            app:layout_constraintTop_toTopOf="@id/user_profile_image_view"
            app:layout_constraintBottom_toBottomOf="@id/user_profile_image_view"
            android:text="@{item.writtenTime, default=`1분 전`}"
            android:layout_marginStart="3dp"/>

        <!-- 댓글 내용 -->
        <TextView
            android:id="@+id/comment_content_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{item.content, default=`댓글 내용`}"
            app:layout_constraintTop_toBottomOf="@id/user_profile_image_view"/>

        <!-- 좋아요 및 대댓글 달기 -->
        <LinearLayout
            android:id="@+id/like_button_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/comment_content_text_view"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical">
            <ImageView
                isSelected="@{isLiked}"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/btn_like"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{Integer.toString(item.likeCount), default=`0`}" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/reply_button_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/like_button_linear_layout"
            app:layout_constraintTop_toTopOf="@id/like_button_linear_layout"
            app:layout_constraintBottom_toBottomOf="@id/like_button_linear_layout"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_comment_unselected"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reply" />
        </LinearLayout>

        <!-- 대댓글 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/replies_recycler_view"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_rounded_rect_20dp_fill_light_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/like_button_linear_layout"
            goneUnless="@{item.replies != null &amp;&amp; !item.replies.empty}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>