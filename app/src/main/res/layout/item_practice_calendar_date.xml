<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="day"
            type="int" />
        <variable
            name="isToday"
            type="boolean" />
        <variable
            name="isSelected"
            type="boolean" />
        <variable
            name="isThisMonth"
            type="boolean" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.studiowash.mumong.practice.diary.view.calendar.ColorPercentageRectView
            android:id="@+id/calendar_date_background_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@{Integer.toString(day)}"
            android:textColor="@{isToday ? @color/brand_color_2 : isThisMonth ? @color/black : @color/icon_off}"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>